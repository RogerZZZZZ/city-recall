<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/XhsEmoticonsKeyboardTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:titleTextColor="@color/white"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/orange"
            app:popupTheme="@style/XhsEmoticonsKeyboardTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/regist_top_banner_first"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:text="填入注册信息"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@drawable/txtcolor_oran2alpha_sel"
            android:textSize="14sp"
            android:text=">"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/regist_top_banner_second"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/txt_light_gray"
            android:textSize="14sp"
            android:text="完成注册"
            android:layout_height="30dp" />

        </LinearLayout>

    <com.example.rogerzzzz.cityrecall.widget.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>