<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_agray">

    <EditText
        android:id="@+id/username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        style="@style/TextViewSubhead"
        android:padding="10dp"
        android:background="@drawable/editext_bg"
        android:hint="用户名"
        android:textSize="14dp"
        android:maxLines="1"
        android:textColorHint="@color/txt_light_gray"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        style="@style/TextViewSubhead"
        android:inputType="textPassword"
        android:background="@drawable/editext_bg"
        android:hint="密码"
        android:textSize="14dp"
        android:maxLines="1"
        android:textColorHint="@color/txt_light_gray"/>

    <EditText
        android:id="@+id/password_again"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="12dp"
        android:inputType="textPassword"
        style="@style/TextViewSubhead"
        android:background="@drawable/editext_bg"
        android:hint="确认密码"
        android:textSize="14dp"
        android:maxLines="1"
        android:textColorHint="@color/txt_light_gray"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="12dp"
        style="@style/TextViewSubhead"
        android:background="@drawable/editext_bg"
        android:hint="邮箱（可选）"
        android:textSize="14dp"
        android:maxLines="1"
        android:textColorHint="@color/txt_light_gray"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:background="@color/bg_gray"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/confirm_regist_notReady"
            android:layout_weight="18"
            android:layout_width="0dp"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/confirm_regist_not_ready"
            android:text="确认注册"
            android:textColor="@color/white"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/confirm_regist"
            android:layout_weight="18"
            android:layout_width="0dp"
            android:visibility="gone"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/confirm_regist"
            android:text="确认注册"
            android:textColor="@color/white"
            android:layout_height="40dp" />

        <Button
            android:background="@color/bg_gray"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />

        </LinearLayout>


</LinearLayout>